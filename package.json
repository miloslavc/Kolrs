{
  "name": "kolrs",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reach/router": "^1.2.1",
    "dotenv": "^8.2.0",
    "firebase": "^7.5.2",
    "firebase-cli": "^1.2.0",
    "firebase-tools": "^7.9.0",
    "global": "^4.4.0",
    "html2canvas": "^1.0.0-rc.3",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-color": "^2.17.3",
    "react-copy-to-clipboard": "^5.0.2",
    "react-device-detect": "^1.11.14",
    "react-dom": "^16.12.0",
    "react-icons": "^3.8.0",
    "react-lottie": "^1.2.3",
    "react-player": "^1.14.2",
    "react-scripts": "3.3.0",
    "react-spring": "^8.0.27",
    "styled-components": "^5.0.0-rc.2",
    "tinycolor2": "^1.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "commit": "npx git cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "commitizen": "^4.0.3",
    "cz-emoji": "^1.1.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "yarn install",
      "prepare-commit-msg": "exec < /dev/tty && npx git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier — single-quote — write",
      "git add"
    ]
  }
}
